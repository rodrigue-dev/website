{% extends 'base.html.twig' %}

{% block title %}
OKOHO|{{ "title.contact"| trans }}
{% endblock %}

{% block body %}
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-6 my-6 mt-0 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center">
            <h1 class="display-4 text-white animated slideInDown mb-4">Contact Us</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                    <li class="breadcrumb-item text-primary active" aria-current="page">Contact</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Contact Start -->
    {% for message in app.flashes('success') %}   <div class="alert alert-success" role="alert">     {{ 'contact.infos'|trans }}   </div> {% endfor %}
 
    <div class="container-xxl py-6">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 450px;">
                    <div class="position-relative h-100">
                        <iframe tabindex="0" class="position-relative w-100 h-100" frameborder="0" style="min-height: 450px; border:0;" allowfullscreen="" aria-hidden="false" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5340.319410931344!2d8.779572349365392!3d51.990578432031654!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47ba410993729b5b%3A0xbdc372466375f5be!2sLange%20Str.%208%2C%2032791%20Lage%2C%20Allemagne!5e0!3m2!1sfr!2scm!4v1699851749615!5m2!1sfr!2scm" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                    <h6 class="text-primary text-uppercase mb-2">{{ 'title.contact'|trans }}</h6>
                    <h1 class="display-6 mb-4">{{ 'contact.h1'|trans }}</h1>
                    <p class="mb-4">{{ 'contact.h6'|trans }}</p>

                    <form method="post" >
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0 bg-light" name="name" id="name" placeholder="{{ 'contact.name'|trans }}">
                                    <label for="name">{{ 'contact.name'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control border-0 bg-light" name="email" id="email" placeholder="{{ 'contact.email'|trans }}">
                                    <label for="email">{{ 'contact.email'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0 bg-light" name="entrepise" id="subject" placeholder="{{ 'contact.entrepise'|trans }}">
                                    <label for="subject">{{ 'contact.entrepise'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0 bg-light" name="subject" id="subject" placeholder="Subject">
                                    <label for="subject">{{ 'contact.sujet'|trans }}</label>
                                </div>
                            </div>
                             <div class="col-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0 bg-light" name="ville" id="ville" placeholder="Ville">
                                    <label for="ville">{{ 'contact.ville'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0 bg-light" name="telephone" id="telephone" placeholder="Telephone">
                                    <label for="telephone">{{ 'contact.phone'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control border-0 bg-light" placeholder="Leave a message here" name="message" id="message" style="height: 150px"></textarea>
                                    <label for="message">{{ 'contact.message'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary py-3 px-5 rounded-pill" type="submit">{{ 'contact.button'|trans }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->
{% endblock %}

